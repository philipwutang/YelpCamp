<% include ../partials/header %>

<% if (currentUser && currentUser.isAdmin) { %>
  <h1>You are an admin!</h1>
<% } %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome to YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
  </div>
</header>

<% if (campgrounds.length !== 0) { %>
  <div class="row">
    <div class="col-plg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>
<% } %>

<div class="row text-center flex">
  <% campgrounds.forEach((campground) => { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img class="image" src="<%= campground.image %>" alt="Campground Image">
        <div class="caption">
          <h4><%= campground.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div>
    </div>
  <% }); %>
  </div>

<% include ../partials/footer %>
